<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="144dp"
        android:onClick="reset"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="368dp"
        android:layout_height="368dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="271dp"
        android:background="@drawable/board"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <ImageView
            android:id="@+id/imageViewRed1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:alpha="0"
            android:onClick="red1"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewRed2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:alpha="0"
            android:onClick="red2"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewRed3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:alpha="0"
            android:onClick="red3"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewRed4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:alpha="0"
            android:onClick="red4"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewRed5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:alpha="0"
            android:onClick="red5"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewRed6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:alpha="0"
            android:onClick="red6"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewRed7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:alpha="0"
            android:onClick="red7"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewRed8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:alpha="0"
            android:onClick="red8"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewRed9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0"
            android:onClick="red9"
            app:srcCompat="@drawable/red" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>